<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <TextView
            android:id="@+id/diaDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/viTri"
            android:layout_below="@+id/diaDiem"
            android:layout_width="wrap_content"
            android:textColor="@color/White"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/tvTime"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tvDate"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTime"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"

            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/nhietDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/viencong"
            android:alpha="0.5"
            android:layout_margin="15dp"
            android:layout_below="@+id/viTri">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nhietDoHienTai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="20"
                    android:textSize="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="o"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/nhietDoHienTai" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nhietDoThapNhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/mid"

                    android:text="20"
                    android:textSize="30dp"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="o"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/nhietDoThapNhat" />
                <TextView
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="33dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/nhietDoCaoNhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="30dp"
                    android:layout_toRightOf="@id/mid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="o"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/nhietDoCaoNhat" />
            </RelativeLayout>


            <TextView
                android:id="@+id/thoiTiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/doAm"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/viencong"
                android:gravity="center_horizontal"
                android:layout_below="@+id/nhietDo"
                android:layout_marginLeft="30dp"
                android:alpha="0.6"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/water_drop"/>
                <TextView
                    android:id="@+id/tvDoAm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="30"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnWind"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/viencong"
                android:gravity="center_horizontal"
                android:layout_below="@+id/nhietDo"
                android:alpha="0.6"
                android:orientation="vertical"
                android:layout_alignRight="@+id/nhietDo">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_speed_24"/>
                <TextView
                    android:id="@+id/tvWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="30"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lnWind">

            </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>


</layout>